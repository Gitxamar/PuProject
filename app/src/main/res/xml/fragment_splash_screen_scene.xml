<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="3000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/logo"
               motion:framePosition="10"
               android:translationY="0dp"
               android:scaleX="1.0"
               android:scaleY="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/logo"
               motion:framePosition="40"
               android:translationY="-70dp"
               android:scaleX="0.5"
               android:scaleY="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/appName"
               motion:framePosition="40"
               android:alpha="0.0" />
           <KeyAttribute
               motion:motionTarget="@+id/appName"
               motion:framePosition="60"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/register"
               motion:framePosition="80"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/signin"
               motion:framePosition="80"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/register"
               motion:framePosition="100"
               android:alpha="1.0" />
           <KeyAttribute
               motion:motionTarget="@+id/signin"
               motion:framePosition="100"
               android:alpha="1.0" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/register"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="312sp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:translationY="20sp"
            android:scaleX="0.5"
            android:scaleY="0.5" />
        <Constraint
            android:id="@+id/signin"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="312sp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/register"
            android:alpha="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"
            android:translationY="-20sp"
            android:scaleY="0.5"
            android:scaleX="0.5" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/appName"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1.0"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/logo"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="-70dp"
            android:scaleX="0.5"
            android:scaleY="0.5" />
        <Constraint
            android:id="@+id/register"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="312sp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="0sp" />
        <Constraint
            android:id="@+id/signin"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="312sp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/register"
            android:alpha="1.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:translationY="0sp" />
    </ConstraintSet>
</MotionScene>