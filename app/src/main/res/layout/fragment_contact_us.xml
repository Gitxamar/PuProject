<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvHeader"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/contactUs"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTopHeading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeader"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/roboto_regular"
                android:justificationMode="inter_word"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:text="@string/supportHeading"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSubHeading1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTopHeading1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/roboto_regular"
                android:justificationMode="inter_word"
                android:paddingRight="16dp"
                android:text="@string/emailContent"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvEmailSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubHeading1"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:autoLink="email"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/emailContentMail"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTopHeading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmailSupport"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/roboto_regular"
                android:justificationMode="inter_word"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:text="@string/appHeading"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSubHeading2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTopHeading2"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_regular"
                android:justificationMode="inter_word"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/emailMobileApp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSubHeading2"
                android:autoLink="email"
                android:fontFamily="@font/helvetica_regular"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/feedbackContentEmail"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/black" />

        </RelativeLayout>

    </ScrollView>

</layout>