<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash.View.OnboardingLanguage"
    android:background="@drawable/gradient">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/choose_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:fontFamily="sans-serif-light"
        android:padding="10sp"
        android:text="@string/choose_preferred_language"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20"
        android:layout_marginLeft="12sp" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_language">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_russian"
                android:layout_width="99sp"
                android:layout_height="88sp"
                android:layout_column="1"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/app_trans"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_russian"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:padding="2sp"
                    android:src="@drawable/ic_russia" />

                <TextView
                    android:id="@+id/text_russian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginRight="5sp"
                    android:text="@string/language_russia"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hungarian"
                android:layout_width="99sp"
                android:layout_height="88sp"
                android:layout_column="2"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/app_trans"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_hungaian"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:padding="2sp"
                    android:src="@drawable/ic_hungaria" />

                <TextView
                    android:id="@+id/text_hungarian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginRight="10sp"
                    android:text="@string/language_hungaria"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dummy"
                android:layout_width="99sp"
                android:layout_height="88sp"
                android:layout_column="2"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/app_trans"
                android:clickable="false"
                android:focusable="false"
                android:orientation="vertical"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_italian"
                android:layout_width="99sp"
                android:layout_height="88sp"
                android:layout_column="1"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/app_trans"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_italian"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:padding="2sp"
                    android:src="@drawable/ic_italian" />

                <TextView
                    android:id="@+id/text_italian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginRight="5sp"
                    android:text="@string/language_italia"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_english"
                android:layout_width="99sp"
                android:layout_height="88sp"
                android:layout_column="2"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/app_trans"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_english"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:padding="2sp"
                    android:src="@drawable/ic_english" />

                <TextView
                    android:id="@+id/text_english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginRight="5sp"
                    android:text="@string/language_english"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_polish"
                android:layout_width="99sp"
                android:layout_height="88sp"
                android:layout_column="3"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:backgroundTint="@color/app_trans"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_polish"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:padding="2sp"
                    android:src="@drawable/ic_polish" />

                <TextView
                    android:id="@+id/text_polish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="16sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginRight="5sp"
                    android:text="@string/language_polish"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </TableRow>
    </TableLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next"
        android:layout_width="312sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:text="@string/next"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
        android:textColor="#E00034"
        android:textSize="20sp"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>