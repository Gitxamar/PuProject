<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_dashboard"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="cargill.com.purina.dashboard.View.Home.Home"
        android:label="Home" >
        <action
            android:id="@+id/action_home_to_productCatalogueFilter"
            app:destination="@id/productCatalogueFilter"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/account"
        android:name="cargill.com.purina.dashboard.View.Account"
        android:label="Account" >
        <action
            android:id="@+id/action_account_to_fragmentOnboardingLanguage"
            app:destination="@id/fragmentOnboardingLanguage" />
    </fragment>
    <fragment
        android:id="@+id/notifications"
        android:name="cargill.com.purina.dashboard.View.Notifications"
        android:label="Notifications" />
    <fragment
        android:id="@+id/contactUs"
        android:name="cargill.com.purina.dashboard.View.ContactUs"
        android:label="ContactUs" />
    <fragment
        android:id="@+id/fragmentOnboardingLanguage"
        android:name="cargill.com.purina.splash.View.FragmentOnboardingLanguage"
        android:label="FragmentOnboardingLanguage" />
    <fragment
        android:id="@+id/productCatalogueFilter"
        android:name="cargill.com.purina.ProductCatalogueFilter"
        android:label="ProductCatalogueFilter" />
</navigation>